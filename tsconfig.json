{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ES2020",

		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"allowSyntheticDefaultImports": true,

		"baseUrl": "./",
		"paths": {
			"@routes/*": ["src/routes/*"],
			"@util/*": ["src/util/*"]
		}
	},
	
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	]
}